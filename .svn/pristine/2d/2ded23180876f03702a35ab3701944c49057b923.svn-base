<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/top_bar" android:id="@+id/top_bar"/>
    <LinearLayout
        android:layout_below="@+id/top_bar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@mipmap/login_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_txt"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/themeWhite"
                android:layout_centerHorizontal="true"
                android:text="快来邀请好友安装"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:textColor="@color/themeWhite"
                android:layout_centerHorizontal="true"
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:textColor="@color/themeWhite"
                android:layout_centerHorizontal="true"
                android:text="吧！"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
<ImageView
    android:id="@+id/img_qr_code"
    android:layout_marginTop="20dp"
    android:background="@color/colorBgGray"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/layout_txt"
    android:layout_width="160dp"
    android:layout_height="160dp" />
        <TextView
            android:id="@+id/txt_yellow"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:text="让好友扫描二维码下载"
            android:layout_below="@+id/img_qr_code"
            android:layout_centerHorizontal="true"
            android:textColor="@color/themeYellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:text="长按二维码保存到手机"
            android:layout_below="@+id/txt_yellow"
            android:layout_centerHorizontal="true"
            android:textColor="@color/themeGrayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    </LinearLayout>
<LinearLayout
    android:layout_marginBottom="30dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="发送链接给好友"
        android:textColor="@color/themeYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/layout_wechat"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content">
    <ImageView
        android:background="@mipmap/share_icon_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="12sp"
        android:textColor="@color/themeGrayText"
        android:layout_marginTop="5dp"
        android:text="微信好友"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
        <LinearLayout
            android:id="@+id/layout_wechat_friends"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@mipmap/share_icon_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:textColor="@color/themeGrayText"
                android:layout_marginTop="5dp"
                android:text="朋友圈"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_qq"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@mipmap/share_icon_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:textColor="@color/themeGrayText"
                android:layout_marginTop="5dp"
                android:text="QQ好友"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_qqzone"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@mipmap/share_icon_qqspace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:textColor="@color/themeGrayText"
                android:layout_marginTop="5dp"
                android:text="QQ空间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_copy"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@mipmap/share_icon_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:textColor="@color/themeGrayText"
                android:layout_marginTop="5dp"
                android:text="复制链接"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>
