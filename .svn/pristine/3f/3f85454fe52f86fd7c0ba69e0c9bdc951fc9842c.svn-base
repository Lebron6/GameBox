<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_bg_white"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:padding="10dp"
        android:id="@+id/parent_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="8"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_gift_name"
                        android:text="新手大礼包"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxWidth="150.0dip"
                        android:singleLine="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="15sp" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="礼包剩余总数 : "
                        android:singleLine="true"
                        android:textColor="@color/themeGrayText"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/tv_gift_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="8种"
                        android:textColor="@color/themeYellow"
                        android:textSize="12sp" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_cdkey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="礼包兑换码 : "
                        android:singleLine="true"
                        android:textColor="@color/themeGrayText"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/tv_gift_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="xxxxxxx"
                        android:textColor="@color/themeYellow"
                        android:textSize="12sp" />

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_gift_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3.0dip"
                        android:text="新手礼包、新年大礼包"
                        android:textColor="@color/themeGrayText"
                        android:textSize="12sp" />

                </RelativeLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_get"
                android:layout_width="0dip"
                android:layout_height="28.0dip"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:layout_weight="2"
                android:textColor="@drawable/text_color_selector_m"
                android:background="@drawable/text_bg_selector_m"
                android:gravity="center"
                android:text="领取"
                ></TextView>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_copy"
                android:layout_width="0dip"
                android:layout_height="28.0dip"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:layout_weight="2"
                android:textColor="@drawable/text_color_selector_m"
                android:background="@drawable/text_bg_selector_m"
                android:gravity="center"
                android:text="复制"
                ></TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>