<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/themeWhite"
    android:layout_height="match_parent">

    <include layout="@layout/top_bar"/>

    <EditText
        android:background="@color/colorStrokenTr"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/et_content"
        android:layout_margin="10dp"
        android:gravity="left|top"
        android:padding="5dp"
        android:textColorHint="@color/themeGrayText"
        android:textColor="@color/colorTextBlack"
        android:hint="请输入反馈信息"/>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/layout_password"
        android:id="@+id/tv_commit"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="40.0dip"
        android:layout_centerInParent="true"
        android:textColor="@drawable/text_color_selector_m"
        android:background="@drawable/text_bg_selector_m"
        android:gravity="center"
        android:text="提交"
        android:textSize="14sp"
        ></TextView>

</LinearLayout>