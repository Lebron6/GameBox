<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wag.gamebox.ui.view.NoScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="58dp"
        />
    <RadioGroup
        android:layout_alignParentBottom="true"
        android:id="@+id/rg_group"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
        android:id="@+id/rb_home"
        style="@style/BottomTabStyle"
        android:drawableTop="@drawable/btn_tab_home_selector"
        android:text="首页"/>
        <RadioButton
            android:id="@+id/rb_my"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/btn_tab_my_selector"
            android:text="我的"/>

        <RadioButton
            android:visibility="gone"
            android:id="@+id/rb_gifts"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/btn_tab_gift_selector"
            android:text="礼包" />

        <RadioButton
            android:visibility="gone"
            android:id="@+id/rb_activitys"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/btn_tab_activity_selector"
            android:text="资讯" />

        <RadioButton
            android:id="@+id/rb_mcenter"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/btn_tab_center_selector"
            android:text="管理" />

    </RadioGroup>


</RelativeLayout>