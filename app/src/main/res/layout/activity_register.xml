<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:orientation="vertical"
   android:background="@color/themeWhite"
    android:layout_height="match_parent">

    <include layout="@layout/top_bar"/>
<LinearLayout
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <TextView
        android:text="账号"
        android:textColor="@color/colorTextBlack"
        android:layout_width="70dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_account"
        android:layout_marginLeft="20dp"
        android:background="@null"
        android:hint="请输入账号"
        android:textSize="12sp"
        android:textColor="@color/colorTextBlack"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
</LinearLayout>
    <View
        android:background="@color/themeGrayLine"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>
    <RelativeLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/txt_code"
            android:text="验证码"
            android:layout_centerVertical="true"
            android:textColor="@color/colorTextBlack"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_phone_code"
            android:hint="请输入验证码"
            android:textSize="12sp"
            android:textColor="@color/colorTextBlack"
            android:layout_toLeftOf="@+id/tv_get_phone_code"
            android:layout_toRightOf="@+id/txt_code"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/tv_get_phone_code"
            android:layout_width="80dp"
            android:layout_height="28.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textColor="@drawable/text_color_selector_m"
            android:background="@drawable/text_bg_selector_m"
            android:gravity="center"
            android:textSize="12sp"
            android:text="获取验证码"
            ></TextView>
    </RelativeLayout>
    <View
        android:background="@color/themeGrayLine"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="密码"
            android:layout_width="70dp"
            android:textColor="@color/colorTextBlack"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_password"
            android:hint="请输入密码"
            android:textSize="12sp"
            android:textColor="@color/colorTextBlack"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </LinearLayout>
    <View
        android:background="@color/themeGrayLine"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="真实姓名"
            android:layout_width="70dp"
            android:textColor="@color/colorTextBlack"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_real_name"
            android:hint="请输入姓名"
            android:textSize="12sp"
            android:textColor="@color/colorTextBlack"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </LinearLayout>
    <View
        android:background="@color/themeGrayLine"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="身份证号码"
            android:layout_width="70dp"
            android:textColor="@color/colorTextBlack"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_id_number"
            android:hint="请输入身份证号码"
            android:textSize="12sp"
            android:textColor="@color/colorTextBlack"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </LinearLayout>
    <View
        android:background="@color/themeGrayLine"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/layout_password"
        android:id="@+id/tv_register"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="40.0dip"
        android:layout_centerInParent="true"
        android:textColor="@drawable/text_color_selector_m"
        android:background="@drawable/text_bg_selector_m"
        android:gravity="center"
        android:text="注册"
        android:textSize="14sp"
        ></TextView>
</LinearLayout>