<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="180dp"
        android:background="@drawable/item_bg_white"
        >
        <RelativeLayout
            android:id="@+id/xc"
            android:background="@drawable/theme_bg_yellow"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清理缓存"
                android:layout_centerInParent="true"
                android:textColor="@color/themeWhite"
                android:textSize="16dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/themeGrayLine"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/zi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始清除缓存..."
            android:textSize="18dp"
            android:textColor="@color/colorTextBlack"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            >

            <TextView
                android:id="@+id/lv_btn"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="确认"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:textColor="@drawable/text_color_selector_m"
                android:background="@drawable/text_bg_selector_m"
                android:gravity="center"
                />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>