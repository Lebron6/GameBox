<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:paddingTop="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_user_icon"
            android:layout_width="37dp"
            android:layout_height="37dp" />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_user_name"
                android:text="毛不易"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_comment_time"
                android:text="2019.5.14 8:30"
                android:textSize="12sp"
                android:textColor="@color/themeGrayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_comment"
        android:text="蔡徐坤教你打篮球蔡徐坤教你打篮球蔡徐坤教你打篮球蔡徐坤教你打篮球蔡徐坤教你打篮球蔡徐坤教你打篮球蔡徐坤教你打篮球蔡徐坤教你打篮球蔡徐坤教蔡徐坤篮球蔡..."
        android:textSize="15sp"
        android:textColor="@color/colorTextBlack"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="47dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/layout_callback"
        android:padding="6dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="47dp"
        android:background="@color/colorBgGray"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_call_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
  <LinearLayout
      android:id="@+id/layout_all_callback"
      android:layout_marginTop="5dp"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
          android:text="查看全部 "
          android:textSize="12sp"
          android:textColor="@color/themeYellow"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <TextView
          android:id="@+id/tv_callback_num"
          android:text="50"  android:textSize="12sp"
          android:textColor="@color/themeYellow"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <TextView
          android:text=" 条回复"  android:textSize="12sp"
          android:textColor="@color/themeYellow"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
  </LinearLayout>

    </LinearLayout>
</LinearLayout>
</LinearLayout>
