<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/re_top"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/relativeLayout2">

            <RelativeLayout
                android:id="@+id/a"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                >
                <ImageView
                    android:id="@+id/iv_icon"
                    android:background="@color/themeYellow"
                    android:layout_width="115dp"
                    android:layout_height="70dp"
                    />

                <TextView
                    android:text="《资讯标题》"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_title"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/iv_icon"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorTextBlack"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="17dp"
                    />

                <TextView
                    android:text="新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_details"
                    android:layout_below="@+id/tv_title"
                    android:textSize="14dp"
                    android:ellipsize="end"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:maxLines="2"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/themeGrayText"
                    android:layout_toRightOf="@+id/iv_icon"
                    android:layout_toEndOf="@+id/iv_icon" />
            </RelativeLayout>
            <TextView
                android:id="@+id/info_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/a"
                android:textSize="13dp"
                android:text="2017-02-09"
                android:textColor="@color/themeGrayText"/>
        </RelativeLayout>
    </RelativeLayout>
<View
    android:layout_below="@+id/re_top"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/themeGrayLine"
    android:layout_width="match_parent"
    android:layout_height="0.3dp"/>
</RelativeLayout>