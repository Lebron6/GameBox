<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/tv_task_status"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_task_content"
            android:layout_marginLeft="24dp"
            android:text="大话西游在线时长累计满2小时"
            android:textSize="18sp"
            android:textColor="@color/colorTextBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_time"
            android:layout_below="@+id/tv_task_content"
            android:layout_marginRight="40dp"
            android:text="2018.9.12-2019.6.3"
            android:textSize="13sp"
            android:textColor="@color/themeGrayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" /></RelativeLayout>
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_task_status"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="6dp"
            android:textSize="12sp"
            android:paddingRight="6dp"
            android:layout_marginRight="24dp"
            android:layout_alignParentRight="true"
            android:textColor="@drawable/text_color_selector_m"
            android:background="@drawable/text_bg_selector_m"
            android:text="待完成"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/themeGrayLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>
